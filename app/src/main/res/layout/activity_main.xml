<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Gestion de  la boutique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:textSize="30sp" android:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="83dp"/>
    <Button
            android:text="Historique des commandes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="249dp"/>
    <Button
            android:text="Nouvelle commande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:text="Stocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button3" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <TextView
            android:text="L'API GO doit être lancé en même temps pour fonctionner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView4" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintHorizontal_bias="0.488"/>
</android.support.constraint.ConstraintLayout>